package algorithm.objects;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import org.hl7.fhir.r4.model.Condition;
import org.hl7.fhir.r4.model.Medication;

import FHIRResourceHelper.ResourceCreator;

public class ConsiderMedication1 extends Entity {

	public Medication medication;
	public int db_id;
	
	public ConsiderMedication1(int id, Medication medication, int db_id) {
		super(id);
		this.medication = medication;
		this.db_id = db_id;
	}
	

	public ConsiderMedication1(Connection c, int entity_id) throws SQLException {
		super(entity_id);
		PreparedStatement ps1 = c.prepareStatement("select * from algorithm_consider_medication_1 acm1 inner join drug d on d.id = ac1.drug_id where acm1.algorithm_entity_id = ?");
		ps1.setInt(1, entity_id);
		
		ResultSet rs1 = ps1.executeQuery();
		
		rs1.next();
		
		this.db_id = rs1.getInt("acd1.id");
		
		Medication condition = new Condition();
		condition.setCode(ResourceCreator.getCodeableConcept(rs1.getString("c.bnf_name"), ResourceCreator.SNOMED_SYSTEM, rs1.getString("c.snomed_code")));
		condition.setId(rs1.getInt("c.id")+"");
		this.condition = condition;
		
	}
	
	
	
}
