package algorithm.objects;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class MedicationNotToleratedDecision2 extends Entity {

	public String medication_code;
	public int db_id;
	
	public MedicationNotToleratedDecision2(int id, String medication_code, int db_id) {
		super(id);
		this.medication_code = medication_code;
		this.db_id = db_id;
	}
	
	
	public ConsiderMedication2(Connection c, int entity_id) throws SQLException {
		super(entity_id);
		PreparedStatement ps1 = c.prepareStatement("select * from algorithm_consider_medication_2 acm2 acm2.algorithm_entity_id = ?");
		ps1.setInt(1, entity_id);
		
		ResultSet rs1 = ps1.executeQuery();
		
		rs1.next();
		
		this.db_id = rs1.getInt("acm2.id");
		this.medication_code = rs1.getString("acm2.code");
		
		
	}
}
