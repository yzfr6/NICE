package algorithm.objects;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import org.hl7.fhir.r4.model.Condition;

import FHIRResourceHelper.ResourceCreator;

public class ConditionDecision1 extends Entity {

	public Condition condition;
	public int db_id;
	
	public ConditionDecision1(int id, Condition condition, int db_id) {
		super(id);
		this.condition = condition;
		this.db_id = db_id;
	}
	
	public ConditionDecision1(Connection c, int entity_id) throws SQLException {
		super(entity_id);
		PreparedStatement ps1 = c.prepareStatement("select * from algorithm_condition_decision_1 acd1 inner join condition c on c.id = acd1.condition_id where acd1.algorithm_entity_id = ?");
		ps1.setInt(1, entity_id);
		
		ResultSet rs1 = ps1.executeQuery();
		
		rs1.next();
		
		this.db_id = rs1.getInt("acd1.id");
		
		Condition condition = new Condition();
		condition.setCode(ResourceCreator.getCodeableConcept(rs1.getString("c.bnf_name"), ResourceCreator.SNOMED_SYSTEM, rs1.getString("c.snomed_code")));
		condition.setId(rs1.getInt("c.id")+"");
		this.condition = condition;
		
	}
	
	
}
